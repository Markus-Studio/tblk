{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",
    "lib": ["es2020", "DOM"]
  },
  "include": [
    "src/**/*",
    "grammar/**/*",
    "tests/**/*"
  ]
}
